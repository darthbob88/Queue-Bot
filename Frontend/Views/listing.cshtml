<h2>List of jobs to do.</h2>
<div ng-controller="TaskListCtrl">
    <ol>
        <li ng-repeat="job in jobListing">
            Name: {{job.Name}}
            Job: {{job.JobName}}
            Time in Queue: {{job.WaitTime}}
        </li>
    </ol>

    <form ng-submit="addJob()">
        <label>
            Customer name
            <input type="text" ng-model="newJobData.name" />
        </label>
        <br />
        <label>
            Customer time-rate<input type="number" ng-model="newJobData.timeValue" />
        </label>
        <br />
        <label ng-repeat="job in otherJobListing">
            <input type="radio" value="{{job}}" name="actualJob" ng-model="newJobData.desiredJob" />
            {{job.name}}

        </label>
        <br />
        <button type="submit">Add job to queue</button>
    </form>
</div>
